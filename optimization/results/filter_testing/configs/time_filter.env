# Time Filter Configuration - Only Time Filter Enabled
# London/NY hours (8:00-21:00 UTC) for high liquidity sessions

# Symbol and venue
BACKTEST_SYMBOL=EUR/USD
BACKTEST_VENUE=IDEALPRO

# Date range (in-sample period)
BACKTEST_START_DATE=2024-01-01
BACKTEST_END_DATE=2024-03-31

# Bar specification
BACKTEST_BAR_SPEC=1-MINUTE-MID-EXTERNAL

# MA parameters (best from previous optimization)
BACKTEST_FAST_PERIOD=40
BACKTEST_SLOW_PERIOD=250
STRATEGY_CROSSOVER_THRESHOLD_PIPS=0.0

# Risk management parameters (best from risk optimization)
BACKTEST_STOP_LOSS_PIPS=25
BACKTEST_TAKE_PROFIT_PIPS=50
BACKTEST_TRAILING_STOP_ACTIVATION_PIPS=20
BACKTEST_TRAILING_STOP_DISTANCE_PIPS=15

# Trade sizing
BACKTEST_TRADE_SIZE=100000
BACKTEST_STARTING_CAPITAL=100000.0

# Position management
ENFORCE_POSITION_LIMIT=true
ALLOW_POSITION_REVERSAL=false

# Enable time filter only
STRATEGY_TIME_FILTER_ENABLED=true
STRATEGY_DMI_ENABLED=false
STRATEGY_STOCH_ENABLED=false
STRATEGY_ATR_ENABLED=false
STRATEGY_ADX_ENABLED=false
STRATEGY_CIRCUIT_BREAKER_ENABLED=true

# Time filter settings (London + NY overlap and main hours)
STRATEGY_TRADING_HOURS_START=8
STRATEGY_TRADING_HOURS_END=21
STRATEGY_MARKET_TIMEZONE=UTC
STRATEGY_EXCLUDED_HOURS=

# Filter parameters (for reference, not used when disabled)
STRATEGY_DMI_PERIOD=14
STRATEGY_DMI_BAR_SPEC=2-MINUTE-MID-EXTERNAL
STRATEGY_STOCH_PERIOD_K=14
STRATEGY_STOCH_PERIOD_D=3
STRATEGY_STOCH_BULLISH_THRESHOLD=30
STRATEGY_STOCH_BEARISH_THRESHOLD=70
STRATEGY_STOCH_BAR_SPEC=15-MINUTE-MID-EXTERNAL
STRATEGY_ADX_PERIOD=14
STRATEGY_ADX_MIN_THRESHOLD=15.0

# Catalog and output
CATALOG_PATH=data/historical
OUTPUT_DIR=logs/backtest_results

# Order execution
STRATEGY_USE_LIMIT_ORDERS=true
STRATEGY_LIMIT_ORDER_TIMEOUT_BARS=1

